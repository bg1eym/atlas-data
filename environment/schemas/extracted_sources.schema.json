{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ExtractedSources",
  "type": "object",
  "required": ["radar_categories", "sources", "kols", "_meta"],
  "properties": {
    "radar_categories": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name_zh", "name_en", "keywords", "negative_keywords", "notes"],
        "properties": {
          "id": { "type": "string" },
          "name_zh": { "type": "string" },
          "name_en": { "type": "string" },
          "keywords": { "type": "array", "items": { "type": "string" } },
          "negative_keywords": { "type": "array", "items": { "type": "string" } },
          "notes": { "type": "string" }
        }
      }
    },
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["source_id", "name", "kind", "adapter", "url", "category_id", "weight"],
        "properties": {
          "source_id": { "type": "string" },
          "name": { "type": "string" },
          "kind": { "type": "string", "enum": ["news", "community", "report", "official", "kol"] },
          "adapter": { "type": "string", "enum": ["rss", "html", "github", "x"] },
          "url": { "type": "string", "pattern": "^https://.+" },
          "category_id": { "type": "string" },
          "weight": { "type": "number" },
          "notes": { "type": "string" },
          "selectors": { "type": "array", "items": { "type": "string" } },
          "headers": { "type": "object", "additionalProperties": { "type": "string" } },
          "rate_limit": { "type": "object" },
          "allow_domains": { "type": "array", "items": { "type": "string" } },
          "deny_domains": { "type": "array", "items": { "type": "string" } }
        }
      }
    },
    "kols": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "kol_id",
          "name",
          "platform",
          "handle_or_url",
          "kind",
          "adapter",
          "category_id",
          "weight"
        ],
        "properties": {
          "kol_id": { "type": "string" },
          "name": { "type": "string" },
          "platform": { "type": "string" },
          "handle_or_url": { "type": "string" },
          "kind": { "type": "string", "const": "kol" },
          "adapter": { "type": "string", "enum": ["x", "rss", "html"] },
          "category_id": { "type": "string" },
          "weight": { "type": "number" }
        }
      }
    },
    "_meta": {
      "type": "object",
      "required": ["generated_at", "inputs", "parser"],
      "properties": {
        "generated_at": { "type": "string" },
        "inputs": { "type": "array", "items": { "type": "string" } },
        "parser": { "type": "string" }
      }
    }
  }
}
